<?xml version="1.0" encoding="utf-8"?>
<odoo>

 	<record model="ir.ui.view" id="product_template_form_view_import_inherit">
           <field name="name">product.template.inherit</field>
           <field name="model">product.template</field>
           <field name="inherit_id" ref="product.product_template_only_form_view"/>
           <field name="arch" type="xml">
	           <field name="categ_id" position="after">                 
	                <field name="type_id"/>
	                <field name="selling_period_id"/>
	                <field name="collection_id"/>
	                <field name="group_id"/>
	                <field name="size_code_id"/>
	                <field name="size_id"/>
	                <field name="cat_id"/>
	                <field name="dim_id"/>
	                <field name="dim_code_id"/>
	               <!--  <field name="color_id"/> -->
	                <field name="color2_id"/>
	                
	           </field>
	           <field name="taxes_id" position="after"> 
	           <field name="composition_id"/>
	                <field name="whs_id"/>
	                <field name="made_in_id"/>
	                <field name="origin_id"/>
	                <field name="package_id"/>
	                <field name="royalty"/>
	                <field name="first_cost" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show"/>
	                <field name="current_cost" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show"/>
	                <field name="retail_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show"/>
	                <field name="color_selling_id"/>
	                <field name="product_currency_id"/>
	           </field>        
           </field>
       </record>
       
       
       
       <record id="product_product_view_form_inherit" model="ir.ui.view">
            <field name="name">product.product.view.form.normal.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
             	<xpath expr="//label[@for='lst_price']" position="before">
                    <field name="current_cost" widget='monetary' options="{'currency_field': 'cost_currency_id'}" optional="show"/>
                </xpath>
                
            </field>
        </record>
</odoo>